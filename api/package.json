{
  "name": "takefood-api",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon -r @swc-node/register src/index.ts",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/index.ts",
    "build": "tsc --outDir lib/",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "generate": "yarn generate:prisma",
    "generate:prisma": "prisma generate",
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest"
  },
  "dependencies": {
    "@graphql-yoga/node": "^2.5.0",
    "@pothos/core": "^3.10.1",
    "@pothos/plugin-errors": "^3.4.1",
    "@pothos/plugin-prisma": "^3.6.1",
    "@pothos/plugin-scope-auth": "^3.9.0",
    "@prisma/client": "^3.14.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "graphql": "^16.5.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@swc-node/register": "^1.5.1",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.31",
    "eslint": "^7.32.0",
    "eslint-config-kodefox": "^1.2.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "prisma": "^3.14.0",
    "ts-jest": "^28.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "extends": "kodefox"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "private": true
}
